<MudPaper>
    @if(UpdateDateNotAvailable)
    {
        <MudAlert Severity="Severity.Warning" Class="my-4">
            Unable to determine the last update date for the crime data
        </MudAlert>
    }
    else
    {
        <MudAlert Severity="Severity.Info" Class="my-4">
            Crime data last updated on: <strong>@LastUpdateDate</strong>
        </MudAlert>
    }
</MudPaper>