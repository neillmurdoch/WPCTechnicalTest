<MudPaper Class="pa-4">

    @if(LoadingResults)
    {
        <Spinner />
    }
    else
    {
        @if(CrimesSummary == null || !CrimesSummary.Any())
        {
            @if (SearchPerformed)
            {
                <MudAlert Severity="Severity.Warning" Class="my-4">
                    No crime results available for the specified search criteria
                </MudAlert>
            }
        }
        else
        {
            <MudText Typo="Typo.h6">Crime summary results:</MudText>
            <MudTable Items="@CrimesSummary" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@LoadingResults" LoadingProgressColor="Color.Info">
                <HeaderContent>
                    <MudTh>Category</MudTh>
                    <MudTh>Count</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Category">@context.Category</MudTd>
                    <MudTd DataLabel="Count">@context.Count</MudTd>
                </RowTemplate>
            </MudTable>
        }
    }

</MudPaper>